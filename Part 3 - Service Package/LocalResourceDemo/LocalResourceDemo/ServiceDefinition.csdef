<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="LocalResourceDemo" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-01.2.3">
  <WebRole name="LocalResourceDemo.Web" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <LocalResources>
      <LocalStorage name="ZipFiles" cleanOnRoleRecycle="true" sizeInMB="1024" />
    </LocalResources>
  </WebRole>
</ServiceDefinition>